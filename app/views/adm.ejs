<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel Administrativo</title>
    <link rel="stylesheet" href="/css/adm.css">
</head>
<body>
    <!-- Cabeçalho -->
    <header>
        <nav class="navbar">
            <div class="logo" onclick="toggleLeftSidebar()">
                <!-- Exibe a imagem de perfil -->
                <img src="<%= session.user.imagemPerfil || '/images/default-profile.png' %>" alt="Imagem de Perfil" class="profile-img">
            </div>
            <div class="menu">
                <span class="menu-toggle" onclick="toggleRightSidebar()">&#9776; Menu</span>
            </div>
        </nav>
    </header>

    <!-- Sidebar Esquerda -->
    <div id="leftSidebar" class="sidebar">
        <a href="javascript:void(0)" onclick="closeLeftSidebar()">&#10005; Fechar</a>
        <div class="profile-sidebar">
            <img src="<%= session.user.imagemPerfil || '/images/default-profile.png' %>" alt="Imagem de Perfil" class="profile-img">
            <h3><%= session.user.nome %></h3>
            <p><strong>Cargo:</strong> <%= session.user.cargo %></p>
        </div>
    </div>

    <!-- Sidebar Direita -->
    <div id="rightSidebar" class="sidebar">
        <a href="javascript:void(0)" onclick="closeRightSidebar()">&#10005; Fechar</a>
        <% if (session && session.user) { %>
            <a href="/perfil">Perfil</a>
            <% if (session.user.cargo === 'direcao') { %>
                <a href="/Administrar">Administração</a>
                <a href="/cadastro">Cadastrar Usuário</a>
            <% } %>
            <a href="/logout">Logout</a>
        <% } else { %>
            <a href="/login">Login</a>
            <a href="/Cadastro">Cadastro</a>
        <% } %>
    </div>

    <!-- Conteúdo Principal -->
    <div class="container">
        <h1>Painel Administrativo</h1>
        <p>Bem-vindo ao painel administrativo. Aqui você pode gerenciar usuários e acessar informações importantes.</p>

        <!-- Funcionalidades Administrativas -->
        <div class="admin-options">
            <div class="option">
                <a href="/gerenciar-usuarios">
                    <img src="/images/usuarios.png" alt="Gerenciar Usuários">
                    <h3>Gerenciar Usuários</h3>
                </a>
            </div>
            <div class="option">
                <a href="/cadastrar-evento">
                    <img src="/images/eventos.png" alt="Cadastrar Evento">
                    <h3>Cadastrar Eventos</h3>
                </a>
            </div>
            <div class="option">
                <a href="/estatisticas">
                    <img src="/images/estatisticas.png" alt="Estatísticas">
                    <h3>Visualizar Estatísticas</h3>
                </a>
            </div>
        </div>
    </div>

    <script>
        // Funções para controlar as sidebars
        function toggleLeftSidebar() {
            const leftSidebar = document.getElementById("leftSidebar");
            leftSidebar.style.width = leftSidebar.style.width === "250px" ? "0" : "250px";
        }

        function closeLeftSidebar() {
            document.getElementById("leftSidebar").style.width = "0";
        }

        function toggleRightSidebar() {
            const rightSidebar = document.getElementById("rightSidebar");
            rightSidebar.style.width = rightSidebar.style.width === "250px" ? "0" : "250px";
        }

        function closeRightSidebar() {
            document.getElementById("rightSidebar").style.width = "0";
        }
    </script>
</body>
</html>
